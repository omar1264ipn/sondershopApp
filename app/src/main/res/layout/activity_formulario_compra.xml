<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    tools:context=".detalleVenta.detalleProducto">

    <include
        android:id="@+id/include"
        layout="@layout/action_bar_toolbar" />


    <ImageView
        android:id="@+id/imgRTR"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ofrecemos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/cajamarca"
        app:layout_constraintTop_toBottomOf="@+id/include"
        app:layout_constraintVertical_bias="0.04" />

    <TextView
        android:id="@+id/cajamarca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="prueba"
        android:textSize="24sp"
        android:visibility="invisible"
        android:layout_marginTop="20sp"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/lineargrid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/imgRTR"
        app:layout_constraintVertical_bias="0.0">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintVertical_bias="0.24000001">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nombre"
                            android:id="@+id/txtnombreF"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:padding="16dp"
                            android:background="@drawable/skin_button"
                            android:drawablePadding="20dp"
                            android:inputType="text"
                            android:drawableLeft="@drawable/ic_personblack"
                            android:drawableTint="@color/colorAccent"
                            android:layout_marginTop="1dp" />

                    </LinearLayout>


                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/animation_view"
                app:layout_constraintVertical_bias="0.24000001">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Apellidos"
                        android:id="@+id/txtapellidoF"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:padding="16dp"
                        android:background="@drawable/skin_button"
                        android:drawablePadding="20dp"
                        android:inputType="text"
                        android:drawableLeft="@drawable/ic_personblack"
                        android:drawableTint="@color/colorAccent"
                        android:layout_marginTop="1dp" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:id="@+id/cajaapellidos"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/animation_view"
                    app:layout_constraintVertical_bias="0.24000001">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    </LinearLayout>

                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cajaapellidos"
                app:layout_constraintVertical_bias="0.24000001">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Numero"
                        android:id="@+id/txtnumeroF"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:padding="16dp"
                        android:background="@drawable/skin_button"
                        android:drawablePadding="20dp"
                        android:inputType="number"
                        android:drawableLeft="@drawable/ic_personblack"
                        android:drawableTint="@color/colorAccent"
                        android:layout_marginTop="1dp" />

                </LinearLayout>


            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/animation_view"
                    app:layout_constraintVertical_bias="0.24000001">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginTop="0dp"
                            android:src="@drawable/ic_bandera"></ImageView>


                        <Spinner
                            android:id="@+id/sPais"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/animation_view"
                    app:layout_constraintVertical_bias="0.24000001">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Distrito"
                            android:id="@+id/txtdistritoF"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:padding="16dp"
                            android:background="@drawable/skin_button"
                            android:drawablePadding="20dp"
                            android:inputType="text"
                            android:drawableLeft="@drawable/ic_personblack"
                            android:drawableTint="@color/colorAccent"
                            android:layout_marginTop="1dp" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/animation_view"
                    app:layout_constraintVertical_bias="0.24000001">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Calle"
                            android:id="@+id/txtcalleF"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:padding="16dp"
                            android:background="@drawable/skin_button"
                            android:drawablePadding="20dp"
                            android:inputType="text"
                            android:drawableLeft="@drawable/ic_personblack"
                            android:drawableTint="@color/colorAccent"
                            android:layout_marginTop="1dp" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/animation_view"
                    app:layout_constraintVertical_bias="0.24000001">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Estado/Ciudad"
                            android:id="@+id/txtestadoF"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:padding="16dp"
                            android:background="@drawable/skin_button"
                            android:drawablePadding="20dp"
                            android:inputType="text"
                            android:drawableLeft="@drawable/ic_personblack"
                            android:drawableTint="@color/colorAccent"
                            android:layout_marginTop="1dp" />

                    </LinearLayout>

                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/animation_view"
                app:layout_constraintVertical_bias="0.24000001">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="C.P"
                        android:id="@+id/txtcodigopostalF"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:padding="16dp"
                        android:background="@drawable/skin_button"
                        android:drawablePadding="20dp"
                        android:inputType="number"
                        android:drawableLeft="@drawable/ic_personblack"
                        android:drawableTint="@color/colorAccent"
                        android:layout_marginTop="1dp" />

                </LinearLayout>


            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/animation_view"
                    app:layout_constraintVertical_bias="0.24000001">


                    <Button
                        android:id="@+id/btnpago2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        android:backgroundTint="@color/colorAccent"
                        android:text="@string/hintcomprar"
                        android:textColor="@color/colorWhite" />


                </LinearLayout>

            </LinearLayout>


        </ScrollView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gredient_bginicial"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal">

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>